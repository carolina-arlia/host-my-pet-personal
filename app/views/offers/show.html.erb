<!---------- CARDS SECTION -------------------->
  <div class="container-show-reservations d-flex align-items-center mt-0">
        <div class="my-reservation-details col-6 m-4">
          <h2><%= @offer.title %></h2>
          <p> <small><%= @offer.location %> </small></p>
          <hr><br>
          <p> Hosted by: <%= @offer.user.full_name %> </p>
          <p><em>A but more about the place:</em></p>
          <p> <%= @offer.description %> </p>
        </div>
      <div class="container col-6">
        <div class="row">
          <div class="col-10 m-auto">
            <div class="flat-form form-container">
                <h3> $ <%= @offer.price_per_night %> <small>per night</small></h3>
                <div class="mt-3">
                  <%= simple_form_for [@offer, @reservation] do |r| %>
                    <%= r.input :date_checkin, as: :date %>
                    <%= r.input :date_checkout, as: :date %>
                    <%= r.input :guests %>
                    <% if current_user.id == @offer.user_id %>
                    <% else %>
                    <%= r.button :submit, class: "btn btn-primary" %>
                    <% end %>
                  <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
 </div>
